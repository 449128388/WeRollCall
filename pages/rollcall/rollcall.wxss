.container {
  background-color: #2a3162;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.rollcall-button {
  height: 160rpx;
  width: 600rpx;
  margin: 40rpx auto;
  background-color: #fff;
  border-radius: 6rpx;
  /*box-shadow: 10rpx 10rpx 10rpx #000;*/
  font-size: 20px;
  color: #fff;
  text-align: center;
}

.rollcall-button .icon {
  float: left;
  height: 160rpx;
  width: 160rpx;
  margin: 0 40rpx;
}

.rollcall-button .desc {
  float: left;
  height: 160rpx;
  width: 360rpx;
  text-align: center;
  line-height: 160rpx;
}
.sign-in-btn{
  padding: 100rpx;
}
.pulse-button {
  height: 300rpx;
  line-height: 300rpx;
  font-size: 40px;
  width: 300rpx;
  margin: 0 auto;
  color: #fff;
  border-radius: 150rpx;
  background-color: #bedbff;
  border: none;
  box-shadow: 0 0 0 0 rgba(190, 219, 255, 0.5);
  animation: pulse 1.5s infinite;
}

.pulse-button image {
  width: 50%;
  height: 50%;
}

.pulse-button:hover {
  animation: none;
}
.banner{
  width: 100%;
}
@keyframes pulse {
  0% {
    transform: scale(0.9);
  }

  70% {
    transform: scale(1);
    box-shadow: 0 0 0 50px rgba(190, 219, 255, 0);
  }

  100% {
    transform: scale(0.9);
    box-shadow: 0 0 0 0 rgba(190, 219, 255, 0);
  }
}

.compass {
  background-color: #e36a44;
}

.location {
  background-color: #eac03e;
}

.qr-code {
  background-color: #21bcc8;
}

.key {
  background-color: #1aad16;
}
