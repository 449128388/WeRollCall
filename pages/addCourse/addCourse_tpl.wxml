<template name="add-course">
    <form bindsubmit="formSubmit">
        <view class="section">
            <view class="section-title">课程名称</view>
            <input placeholder="高等数学" auto-focus name="courseName"/>
        </view>
        <view class="section">
            <view class="section-title">任课教师</view>
            <input value="{{courseTeacher}}"/>
        </view>
        <view class="section">
            <view class="section-title">任课地点</view>
            <input placeholder="X9541" name="courseAddr"/>
        </view>
        <view class="section">
            <view class="section-title">上课时间</view>
            <checkbox-group name="weekdays">
            <label class="checkbox" wx:for="{{weekdays}}">
                <checkbox value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
            </label>
            </checkbox-group>
            <picker mode="time" value="{{timeStart}}" start="08:00" end="21:00" bindchange="bindTimeStartChange" name="courseTimeStart">
            <view class="picker">
                {{timeStart}}
            </view>
            </picker>
            <view class="time-span">-</view>
            <picker mode="time" value="{{timeEnd}}" start="09:35" end="22:00" bindchange="bindTimeEndChange" name="courseTimeEnd">
            <view class="picker">
                {{timeEnd}}
            </view>
            </picker>
        </view>
        <view class="btn-area">
        <button formType="submit" class="add-course" hover-class="add-course-hover">添加课程</button>
        </view>
    </form>
</template>

<template name="search-course">
    <input placeholder="输入课程名称关键词搜索" class="search" bindinput="searchCourse"/>
    <view wx:for="{{results}}" data-course="{{item}}" bindtap="chooseCourse">
        {{item.courseName}} - {{item.teacherName}}
    </view>
</template>