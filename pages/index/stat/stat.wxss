view{
    box-sizing: border-box;
}
.title{
    width: 600rpx;
    text-align: center;
    margin: 50rpx auto;
    font-size: 40rpx;
}
.graph{
    width: 600rpx;
    height: 100rpx;
    margin: 50rpx auto;
    border-radius: 50rpx;
    overflow: hidden;
    background-color: #b2b0b1;
}
.graph view{
    height: 100rpx;
    float: right;
    overflow: hidden;
    box-shadow: #000 0 0 50rpx;
}
.gray{
    background-color: #b2b0b1;
}
.green{
    background-color: #318f35;
}
.blue{
    background-color: #45a0cf;
}
.red{
    background-color: #cf5835;
}
.detail{
    width: 600rpx;
    margin: 0 auto;
}
.detail view{
    float: left;
    width: 50rpx;
    height: 50rpx;
    border-radius: 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
.detail text{
    float: left;
    height: 50rpx;
    width:230rpx;
    line-height: 50rpx;
    margin-bottom: 20rpx;
}
.leave-note{
    width: 700rpx;
    margin: 50rpx auto;
}
.message{
    background-color: #fff;
    width: 100%;
    border-radius: 20rpx;
    padding: 50rpx;
    border-bottom: #000 dotted 1px;
}
.leave-title{
    text-align: center;
    font-size: 24px;
    margin-bottom: 20rpx;
}
.underline{
    text-decoration: underline;
}
.reason{
    border-bottom: #000 solid 1px;
}
.leave-info{
    margin-left: 300rpx;
}
.image{
    background-color: #fff;
    width: 100%;
    height: 400rpx;
    border-radius: 20rpx;
    padding: 50rpx;
    border-top: #000 dotted 1px;
    position: relative;
}
.placeholder{
    z-index: 0;
    width: 300rpx;
    height: 300rpx;
    display: block;
    margin: 0 auto;
}
.file{
    display: block;
    width: 600rpx;
    height: 300rpx;
    z-index: 1;
    position: absolute;
    top: 50rpx;
    left: 50rpx; 
}
.notation{
    text-align: center;
    color: #ccc;
}
.add-course{
  width: 80%;
  height: 80rpx;
  font-size: 18px;
  line-height: 80rpx;
  margin: 20rpx auto;
  background-color: #49545b;
  color: #fff;
}
.add-course-hover{
  background-color: #3e4a51;
}